#!/usr/bin/env bash

#shellcheck disable=SC1091
. "$DOTLY_PATH/scripts/core/_main.sh"
#shellcheck disable=SC1091
. "$DOTLY_PATH/scripts/core/dotly.sh"

##? Lint all dotly related bash files
##?
##? Usage:
##?    lint
if [ "$1" == "-h" ] || [ "$1" = "--help" ]; then
  docs::parse "$@"
fi
script::depends_on shfmt

dotly::list_bash_files | xargs shfmt -ln posix -i 2 -d
