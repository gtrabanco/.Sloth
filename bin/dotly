#!/usr/bin/env bash

set -o pipefail

#shellcheck disable=SC1091
. "${SLOTH_PATH:-$DOTLY_PATH}/scripts/core/src/_main.sh"

##? Usage:
##?    dotly self-update
##?    dotly autoupdate
docs::parse "$@"

case "$1" in
"self-update")
  "$DOTLY_PATH/bin/dot" core update
  ;;
"autoupdate")
  "$DOTLY_PATH/bin/dot" core async-update
  ;;
*)
  "$DOTLY_PATH/bin/dot" "$@"
  ;;
esac
