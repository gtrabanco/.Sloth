#!/usr/bin/env sloth

dot::load_library "github.sh" "core"

DOCOPTS_INSTALL_PATH="${DOCOPTS_INSTALL_PATH:-${HOME}/bin}"
DOCOPTS_BIN="$DOCOPTS_INSTALL_PATH/docopts"


#github::get_latest_package_release_download_url "docopt/docopts" "docopts_darwin_amd64"
#github::get_latest_package_release_download_url "docopt/docopts" "docopts_$(platform::get_os)_$(platform::get_arch)"
github::get_latest_package_release_sha256sum "docopt/docopts" "docopts_$(platform::get_os)_$(platform::get_arch)"
github::hash "$DOCOPTS_BIN"
